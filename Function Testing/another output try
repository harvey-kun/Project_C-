#include <iostream>
#include <string>
#include <iomanip>
using namespace std;

//Just decleration
void siawt(string txt, int margin, bool ishead);
void justprintline();

int main(){
siawt("test",10, true);
return 0;
}

//Void body
void justprintline(){
 cout << "====================\n";
}

void siawt(string txt, int margin, bool ishead){
 if(ishead == false){
    cout << setw(margin) << txt <<endl;
 } else{
    justprintline();
    cout << setw(margin) << txt <<endl;
    justprintline();
 }
}

