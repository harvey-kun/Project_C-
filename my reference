#include <iostream>
#include <iomanip>
using namespace std;

//For input errors
void clearInput(){
    cin.clear();
    cin.ignore(10000, '\n');
}


//CLI
void header(const string title) {
    cout << "============================================================\n";
    cout << setw(47) << title << endl;
    cout << "============================================================\n\n";
}


//Sub choices 1
void mainMenuUI(){
    cout << setw(26) <<"[1]  "<< "Customer\n";
    cout << setw(26) <<"[2]  "<< "Owner\n";
    cout << setw(26) <<"[3]  "<< "Exit\n";
}
//Sub choices 2
void ownerMenuUI(){
    cout << setw(26) <<"[1]  "<< "Return to Main Menu\n";
    cout << setw(26) <<"[2]  "<< "Set Working Days\n";
    cout << setw(26) <<"[3]  "<< "View Available Dates\n";
}
//Sub choices 3
void customerMenuUI() {
    cout << setw(26) <<"[1]  "<< "Return to Main Menu\n";
    cout << setw(26) <<"[2]  "<< "Make Reservation\n";
}

//Owner CLI
void ownerMenu() {
    int choice = 0;

    while (choice != 1) {
        system("clear");
        header("OWNER PANEL");
        ownerMenuUI();

        cout << "\nEnter choice: ";

        //for invalid user input
        if (!(cin >> choice)){
            clearInput();
            choice = 0;
        }

        if (choice == 2) {
            cout << "\nSetting working days...\n";
            cout << "Enter 1 to return: ";
            cin >> choice;
        }

        else if (choice == 3) {
            cout << "\nViewing available dates...\n";
            cout << "Enter 1 to return: ";
            cin >> choice;
        }
    }
}


//Customer CLI
void customerMenu() {
    int choice = 0;

    while (choice != 1) {
        system("clear");
        header("CUSTOMER PANEL");
        customerMenuUI();

        cout << "\nEnter choice: ";

        //for invalid user input
        if (!(cin >> choice)){
            clearInput();
            choice = 0;
        }

        if (choice == 2) {
            cout << "\nMaking reservation...\n";
            cout << "Enter 1 to return: ";
            cin >> choice;
        }
    }
}

//First CLI
int main() {
    int choice = 0;

    while (choice != 3){
        system("clear");
        header("VEHICLE SERVICE RESERVATION SYSTEM");
        mainMenuUI();

        cout << "\nEnter choice: ";

        //for invalid user input
        if (!(cin >> choice)){
            clearInput();
            choice = 0;
        }

        if(choice == 1){
            customerMenu();
        }
        else if (choice == 2){
            ownerMenu();
        }
        else if (choice == 3){
            system("clear");
            cout << "Exiting...\n";
        }
    }

    return 0;
}
